<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">
    <include layout="@layout/menu_bottom"/>
    <ImageView
        android:id="@+id/image_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[4]"
        android:paddingStart="50dp"
        android:paddingEnd="20dp"
        android:contentDescription="@string/album_name"
        android:paddingTop="50dp"/>

    <TextView
        android:id="@+id/track_name"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:text="@string/track_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_album"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012" />

    <TextView
        android:id="@+id/track_artist"
        style="@style/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/album_artist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_album"
        app:layout_constraintTop_toBottomOf="@+id/track_name"
        app:layout_constraintVertical_bias="0.0" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- album -->
            <TextView
                android:id="@+id/textview3"
                style="@style/Title_Statistitcs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/album_title"
                android:layout_alignParentStart="true"
                android:paddingTop="250dp"
                android:layout_toEndOf="@id/textview4"/>

            <View
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:layout_alignStart="@+id/textview3"
                android:layout_alignEnd="@+id/textview3"
                android:layout_below="@+id/textview3"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"/>
            <TextView
                android:id="@+id/album_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/album_name"
                android:layout_alignParentStart="true"
                style="@style/Text_Statistics"
                android:layout_below="@+id/textview3"/>

            <!-- Ano de Lançamento -->
            <TextView
                android:id="@+id/textview4"
                style="@style/Title_Statistitcs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:paddingTop="250dp"
                android:text="@string/ano_title" />

            <View
                android:id="@+id/divider2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:layout_alignStart="@+id/textview4"
                android:layout_alignEnd="@+id/textview4"
                android:layout_below="@+id/textview4"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>
            <TextView
                android:id="@+id/ano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ano_text"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/textview4"
                style="@style/Text_Statistics"
                android:layout_below="@+id/textview4"/>

            <!-- género -->
            <TextView
                android:id="@+id/textview5"
                style="@style/Title_Statistitcs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/genero_title"
                android:layout_below="@+id/textview3"
                android:layout_toEndOf="@id/textview4"
                android:layout_alignParentStart="true"
                android:paddingTop="70dp" />

            <View
                android:id="@+id/divider3"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:layout_alignStart="@+id/textview5"
                android:layout_alignEnd="@+id/textview5"
                android:layout_below="@+id/textview5"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>
            <TextView
                android:id="@+id/genero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/genero_text"
                android:layout_alignParentStart="true"
                style="@style/Text_Statistics"
                android:layout_below="@+id/textview5"/>

            <!-- Duração -->
            <TextView
                android:id="@+id/textview6"
                style="@style/Title_Statistitcs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/textview4"
                android:layout_below="@+id/textview4"
                android:layout_alignTop="@+id/textview5"
                android:paddingTop="70dp"
                android:text="@string/duracao_title" />

            <View
                android:id="@+id/divider4"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:layout_alignStart="@+id/textview6"
                android:layout_alignEnd="@+id/textview6"
                android:layout_below="@+id/textview6"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>
            <TextView
                android:id="@+id/track_maior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duracao_media_text"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/textview6"
                style="@style/Text_Statistics"
                android:layout_below="@+id/textview6"/>


            <!-- top 3 playlist em que se encontra -->
            <TextView
                android:id="@+id/textview9"
                style="@style/Title_Statistitcs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/top_playlist"
                android:layout_below="@+id/textview5"
                android:layout_alignParentStart="true"
                android:paddingTop="70dp" />

            <View
                android:id="@+id/divider7"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:layout_alignStart="@+id/textview9"
                android:layout_alignEnd="@+id/textview9"
                android:layout_below="@+id/textview9"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>
            <LinearLayout
                android:id="@+id/topPlaylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
            <TextView
                android:id="@+id/sync"
                style="@style/last_sync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="50dp"
                android:text="@string/last_sync"
                android:textAlignment="textEnd"
                android:layout_below="@+id/textview9"/>

            <TextView
                android:id="@+id/sync_date"
                style="@style/last_sync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="@string/last_sync_date"
                android:layout_below="@+id/sync"
                android:textAlignment="textEnd"/>
        </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

